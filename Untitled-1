  if (Profile.cartProfile == null) {
                Profile.cartProfile = Assignment_1.ShoppingCart();
                    ;
            }
            if (!Page.IsPostBack) {
                ReBindGrid();
            }
            if (Profile.cartProfile.Items == null) {
                TotalLabel.Visible = false;
            }
        }
        protected void gridView1_RowEditing(object sender, GridViewEditEventArgs e) {
            gridView1.EditIndex = e.NewEditIndex;
            ReBindGrid();
        }
        protected void gridView1_RowUpdating(object sender, GridViewUpdateEventArgs e) {
            TextBox txtQuantity = (TextBox) gridView1.Rows[e.RowIndex].Cells[2].Controls[0];
            int Quantity = Convert.ToInt32(txtQuantity.Text);
            if (Quantity == 0) {
                Profile.cartProfile.Items.RemoveAt(e.RowIndex);
            } else {
                Profile.cartProfile.Items[e.RowIndex].Quantity= Quantity;
            }
            gridView1.EditIndex = -1;
            ReBindGrid();
        }
        protected void gridView1_RowCancelingEdit(object sender, GridViewCancelEditEventArgs e) {
            gridView1.EditIndex = -1;
            ReBindGrid();
        }
        protected void gridView1_RowDeleting(object sender, GridViewDeleteEventArgs e) {
            Profile.cartProfile.Items.RemoveAt(e.RowIndex);
            ReBindGrid();
        }
        private void ReBindGrid() {
            gridView1.DataSource = Profile.cartProfile.Items;
            DataBind();
            TotalLabel.Text = string.Format("Total:{0,19:C}", Profile.cartProfile.Total);
        }